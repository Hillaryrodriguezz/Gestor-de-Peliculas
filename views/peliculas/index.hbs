<div class="container">
  <div class="row mt-4">
    {{#if haspeli}}
      {{#each pelis}}
        <div class="col-md-4">
          <div class="card">
            <div class="card-header {{#if Status}}bg-success{{else}}bg-danger{{/if}}"><h5
                class="text-white"
              >{{nombre}} - {{#if Status}}Activo{{else}}Inactivo{{/if}}</h5></div>
            <div class="card-body">
              <span class="card-text">
                {{descripcion}}
              </span>
              <div class="badge bg-{{colorGenero}} text-white"><span>Genero:
                  {{Genero}}</span></div>
            </div>
            <div class="d-flex justify-content-between">
              <a href="/admin/edit/{{id}}" class="btn btn-warning">Edit</a>
              <a href="/admin/delete/{{id}}" class="btn btn-danger">Delete</a>
            </div>
          </div>
        </div>
      {{/each}}
    {{/if}}
  </div>
</div>